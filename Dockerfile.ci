FROM maven:3.9.4-openjdk-17-slim

# Install required tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy Maven configuration
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source code
COPY . .

# Default command
CMD ["mvn", "clean", "test"]